<Window x:Class="Mon_Repo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mon_Repo"
        mc:Ignorable="d"
        Title="MainWindow" Height="330" Width="525">
    <Grid>
        <TextBox x:Name="UserTextBox" BorderBrush="Black" VerticalContentAlignment="Center" TextAlignment="Center"  HorizontalAlignment="Center" VerticalAlignment="Center" Height="24" Margin="0,-53,0,0" TextWrapping="Wrap" Text="" Width="100" BorderThickness="1"/>
        <PasswordBox x:Name="PasswordBox" BorderBrush="Black" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Height="24" VerticalAlignment="Center" Width="100" ToolTip="Jelszó" Margin="0, 0,0,0" KeyDown="PasswordKeyDown"/>
        <Label x:Name="UserLabel" Content="Felhasználó:" HorizontalAlignment="Left" Height="24" Margin="121,111,0,0" VerticalAlignment="Top" Width="83"/>
        <Label x:Name="PasswordLabel" Content="Jelszó:" HorizontalAlignment="Left" Height="24" Margin="121,138,0,0" VerticalAlignment="Top" Width="83"/>
        <Button x:Name="SignInButton" Content="Belépés" HorizontalAlignment="Left" Height="28" Margin="224,162,0,0" VerticalAlignment="Top" Width="70" Click="SignInClick"/>
    </Grid>
</Window>
