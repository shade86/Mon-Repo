<Window x:Class="Mon_Repo.PurchasedProducts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mon_Repo"
        mc:Ignorable="d"
        Title="Megvásárolt termékek" Height="353.261" Width="321.74">
    <Grid>
        <ListBox SelectedItem="{Binding CartSelectedProduct}" ItemsSource="{Binding AuthenticatedUser.PurchasedProductsList}" HorizontalAlignment="Left" Height="304" Margin="10,10,0,0" VerticalAlignment="Top" Width="295">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Label Content="{Binding Name}" ContentStringFormat="Termék megnevezése: {0}"/>
                        <Label Content="{Binding Price}" ContentStringFormat="Termék ára: 0 Ft"/>
                        <Label Content="{Binding Quantity}" ContentStringFormat="Mennyiség: 0 db"/>
                        <Label Content="{Binding BuyDate}" ContentStringFormat="Vásárlás dátuma: {0}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Window>
