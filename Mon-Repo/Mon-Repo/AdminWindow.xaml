<Window x:Class="Mon_Repo.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mon_Repo"
        mc:Ignorable="d"
        Title="AdminWindow" Height="344.262" Width="702.295">
    <Grid>

        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="294" Margin="10,10,0,0" VerticalAlignment="Top" Width="676">
            <TabItem Header="Users">
                <DataGrid ItemsSource="{Binding Users}" HorizontalAlignment="Left" Height="270" Margin="-2,-3,-1.4,-0.6" VerticalAlignment="Top" Width="673"/>
            </TabItem>
            <TabItem Header="Products">

                <DataGrid ItemsSource="{Binding Products}" HorizontalAlignment="Left" Height="270" Margin="-2,-3,-1.4,-0.6" VerticalAlignment="Top" Width="673"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
