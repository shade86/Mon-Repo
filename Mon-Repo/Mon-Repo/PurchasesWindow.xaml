<Window x:Class="Mon_Repo.PurchasesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mon_Repo"
        mc:Ignorable="d"
        Title="PurchasesWindow" Height="352.5" Width="300">
    <Grid>
        <ListBox ItemsSource="{Binding Purchases}" HorizontalAlignment="Left" Height="299" Margin="25,10,0,-40" VerticalAlignment="Top" Width="235">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Label Content="{Binding Timestamp}" FontSize="11"/>
                        <Label Content="{Binding SumPrice}" FontSize="11"/>
                        <Label Content="{Binding SumCount}" FontSize="11"/>

                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
